{% extends 'base.html.twig' %}

{% block title %}awa's website{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #f4bbff; padding: 2px 6px; }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>portfolio</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #FBFCFC;
            color:  #333;
        }

        header {
            background-color: #FBFCFC;
            color:#333;
            text-align: center;
            padding: 20px;
        }

        .container {
            width: 80%;
            margin: 0 auto;
            padding: 20px;
        }

        .section {
            margin-bottom: 20px;
            border: 2px solid #E59866 ;
            border-radius: 15px;
            padding: 15px;
        }

        .section h2 {
            color: #E59866 ;
        }.section h1 {
            color: #E59866 ;
        }

        .left {
            float: left;
            width: 45%;
            margin-right: 5%;
        }

        .right {
            float: right;
            width: 45%;
            margin-left: 5%;
        }
    </style>
</head>
<body>
    <header>
        <h1>Votre Nom</h1>
        <p>Développeur Web</p>
    </header>

    <div class="container">
        <div class="section left">
            <h2>Section Gauche 1</h2>
            <p>Contenu de la section à gauche.</p>
        </div>

        <div class="section right">
            <h2>Section Droite 1</h2>
            <p>Contenu de la section à droite.</p>
        </div>

        <div class="section left">
            <h2>Section Gauche 2</h2>
            <p>Contenu de la section à gauche.</p>
        </div>

        <!-- Ajoutez d'autres sections en alternance à gauche et à droite -->
    </div>
</body>
</html>
{% endblock %}
